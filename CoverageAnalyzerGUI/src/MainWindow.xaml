<Window x:Class="CoverageAnalyzerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoverageAnalyzerGUI"
        mc:Ignorable="d"
        Title="Coverage Analyzer - Visual Studio Style" Height="900" Width="1400" WindowState="Maximized"
        Background="{DynamicResource WindowBackgroundBrush}">
    
    <Window.Resources>
        <!-- Light Theme Resources -->
        <ResourceDictionary x:Key="LightTheme">
            <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#F0F0F0"/>
            <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#F6F6F6"/>
            <SolidColorBrush x:Key="TextForegroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        </ResourceDictionary>
        
        <!-- Dark Theme Resources -->
        <ResourceDictionary x:Key="DarkTheme">
            <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#2D2D30"/>
            <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#3F3F46"/>
            <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#3F3F46"/>
            <SolidColorBrush x:Key="TextForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#636369"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#0E639C"/>
        </ResourceDictionary>
        
        <!-- Default to Light Theme -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#F6F6F6"/>
        <SolidColorBrush x:Key="TextForegroundBrush" Color="#000000"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
    </Window.Resources>
    
    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <!-- Menu Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content Area -->
            <RowDefinition Height="*"/>
            <!-- Output Window -->
            <RowDefinition Height="200"/>
            <!-- Status Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{DynamicResource MenuBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Foreground="{DynamicResource TextForegroundBrush}">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project..." Command="{Binding NewProjectCommand}"/>
                <MenuItem Header="_Open Project..." Command="{Binding OpenProjectCommand}"/>
                <Separator/>
                <MenuItem Header="_Load Coverage Data" Command="{Binding ParseCoverageDataCommand}"/>
                <Separator/>
                <MenuItem Header="_Save" Command="{Binding SaveCommand}"/>
                <MenuItem Header="Save _All" Command="{Binding SaveAllCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="{Binding UndoCommand}"/>
                <MenuItem Header="_Redo" Command="{Binding RedoCommand}"/>
                <Separator/>
                <MenuItem Header="Cu_t" Command="{Binding CutCommand}"/>
                <MenuItem Header="_Copy" Command="{Binding CopyCommand}"/>
                <MenuItem Header="_Paste" Command="{Binding PasteCommand}"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Solution Explorer" Command="{Binding ToggleSolutionExplorerCommand}"/>
                <MenuItem Header="_Output" Command="{Binding ToggleOutputCommand}"/>
                <MenuItem Header="_Error List" Command="{Binding ToggleErrorListCommand}"/>
                <Separator/>
                <MenuItem Header="_Theme">
                    <MenuItem Header="_Light Theme" Command="{Binding SetLightThemeCommand}"/>
                    <MenuItem Header="_Dark Theme" Command="{Binding SetDarkThemeCommand}"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Coverage Analysis" Command="{Binding RunCoverageAnalysisCommand}"/>
                <MenuItem Header="_Options..." Command="{Binding OptionsCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBarTray Grid.Row="1" Background="{DynamicResource ControlBackgroundBrush}">
            <ToolBar Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource TextForegroundBrush}">
                <Button Command="{Binding NewProjectCommand}" ToolTip="New Project" Content="New" Padding="8,4"/>
                <Button Command="{Binding OpenProjectCommand}" ToolTip="Open Project" Content="Open" Padding="8,4"/>
                <Button Command="{Binding SaveCommand}" ToolTip="Save" Content="Save" Padding="8,4"/>
                <Separator/>
                <Button Command="{Binding RunCoverageAnalysisCommand}" ToolTip="Run Coverage Analysis" Content="Run Analysis" Padding="8,4"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Solution Explorer -->
                <ColumnDefinition Width="300"/>
                <!-- Splitter -->
                <ColumnDefinition Width="Auto"/>
                <!-- Main Working Area -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Solution Explorer Panel -->
            <Border Grid.Column="0" Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Solution Explorer Header -->
                    <Border Grid.Row="0" Background="{DynamicResource MenuBackgroundBrush}" Padding="8,4">
                        <TextBlock Text="Solution Explorer" FontWeight="Bold" FontSize="12" Foreground="{DynamicResource TextForegroundBrush}"/>
                    </Border>
                    
                    <!-- Solution Explorer Content -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Load Data Button -->
                        <Button Grid.Row="0" Name="LoadDataButton" Content="Load Parser Data" 
                               Margin="4" Padding="4,2" 
                               Command="{Binding SolutionExplorerViewModel.LoadDataCommand}"
                               Background="{DynamicResource ControlBackgroundBrush}" 
                               BorderBrush="{DynamicResource BorderBrush}"
                               Foreground="{DynamicResource TextForegroundBrush}"/>
                        
                        <!-- TreeView bound to ViewModel -->
                        <TreeView Grid.Row="1" Name="SolutionExplorer" Background="{DynamicResource WindowBackgroundBrush}" BorderThickness="0" Margin="4"
                                 ItemsSource="{Binding SolutionExplorerViewModel.TreeItems}"
                                 Foreground="{DynamicResource TextForegroundBrush}">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <TextBlock Text="{Binding Header}" FontSize="12"/>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Grid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="{DynamicResource BorderBrush}"/>

            <!-- Main Working Area -->
            <Grid Grid.Column="2" Background="{DynamicResource WindowBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Tab Control Header -->
                <Border Grid.Row="0" Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                    <TabControl Name="MainTabControl" TabStripPlacement="Top" BorderThickness="0"
                               Background="{DynamicResource ControlBackgroundBrush}"
                               Foreground="{DynamicResource TextForegroundBrush}">
                        <TabItem Header="Coverage Overview">
                            <Grid Background="{DynamicResource WindowBackgroundBrush}">
                                <TextBlock Text="Main working area - Coverage data will be displayed here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="16" 
                                          Foreground="{DynamicResource TextForegroundBrush}"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Module Analysis">
                            <Grid Background="{DynamicResource WindowBackgroundBrush}">
                                <TextBlock Text="Module analysis view will be implemented here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="16" 
                                          Foreground="{DynamicResource TextForegroundBrush}"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Test Results">
                            <Grid Background="{DynamicResource WindowBackgroundBrush}">
                                <TextBlock Text="Test results view will be implemented here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="16" 
                                          Foreground="{DynamicResource TextForegroundBrush}"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>
        </Grid>

        <!-- Output Window -->
        <Border Grid.Row="3" Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Output Window Header -->
                <Border Grid.Row="0" Background="{DynamicResource MenuBackgroundBrush}" Padding="8,4">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Output" FontWeight="Bold" FontSize="12" VerticalAlignment="Center" Foreground="{DynamicResource TextForegroundBrush}"/>
                        <ComboBox Name="OutputSelector" Margin="10,0,0,0" SelectedIndex="0" Width="150"
                                 Background="{DynamicResource ControlBackgroundBrush}"
                                 Foreground="{DynamicResource TextForegroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}">
                            <ComboBoxItem>General</ComboBoxItem>
                            <ComboBoxItem>Coverage Analysis</ComboBoxItem>
                            <ComboBoxItem>Parser Output</ComboBoxItem>
                            <ComboBoxItem>Build</ComboBoxItem>
                            <ComboBoxItem>Debug</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Border>
                
                <!-- Output Content -->
                <TextBox Grid.Row="1" 
                        Name="OutputTextBox" 
                        Background="{DynamicResource WindowBackgroundBrush}" 
                        IsReadOnly="True" 
                        VerticalScrollBarVisibility="Auto" 
                        HorizontalScrollBarVisibility="Auto"
                        FontFamily="Consolas"
                        FontSize="12"
                        Margin="4"
                        Text="Coverage Analyzer - Ready&#x0a;Waiting for coverage data to parse..."
                        Foreground="{DynamicResource TextForegroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Background="{DynamicResource AccentBrush}" Foreground="White">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Coverage Parser: " Margin="0,0,5,0"/>
                    <TextBlock Name="ParserStatus" Text="Not Loaded"/>
                    <TextBlock Text=" | " Margin="10,0"/>
                    <TextBlock Text="Files: " Margin="0,0,5,0"/>
                    <TextBlock Name="FileCount" Text="0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
