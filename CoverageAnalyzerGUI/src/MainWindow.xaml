<Window x:Class="CoverageAnalyzerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoverageAnalyzerGUI"
        mc:Ignorable="d"
        Title="Coverage Analyzer - Visual Studio Style" Height="900" Width="1400" WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- Menu Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content Area -->
            <RowDefinition Height="*"/>
            <!-- Output Window -->
            <RowDefinition Height="200"/>
            <!-- Status Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#F6F6F6" BorderBrush="#E5E5E5" BorderThickness="0,0,0,1">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project..." Command="{Binding NewProjectCommand}"/>
                <MenuItem Header="_Open Project..." Command="{Binding OpenProjectCommand}"/>
                <Separator/>
                <MenuItem Header="_Save" Command="{Binding SaveCommand}"/>
                <MenuItem Header="Save _All" Command="{Binding SaveAllCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="{Binding UndoCommand}"/>
                <MenuItem Header="_Redo" Command="{Binding RedoCommand}"/>
                <Separator/>
                <MenuItem Header="Cu_t" Command="{Binding CutCommand}"/>
                <MenuItem Header="_Copy" Command="{Binding CopyCommand}"/>
                <MenuItem Header="_Paste" Command="{Binding PasteCommand}"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Solution Explorer" Command="{Binding ToggleSolutionExplorerCommand}"/>
                <MenuItem Header="_Output" Command="{Binding ToggleOutputCommand}"/>
                <MenuItem Header="_Error List" Command="{Binding ToggleErrorListCommand}"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Coverage Analysis" Command="{Binding RunCoverageAnalysisCommand}"/>
                <MenuItem Header="_Parse Coverage Data" Command="{Binding ParseCoverageDataCommand}"/>
                <MenuItem Header="_Options..." Command="{Binding OptionsCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBarTray Grid.Row="1" Background="#F6F6F6">
            <ToolBar>
                <Button Command="{Binding NewProjectCommand}" ToolTip="New Project" Content="New" Padding="8,4"/>
                <Button Command="{Binding OpenProjectCommand}" ToolTip="Open Project" Content="Open" Padding="8,4"/>
                <Button Command="{Binding SaveCommand}" ToolTip="Save" Content="Save" Padding="8,4"/>
                <Separator/>
                <Button Command="{Binding RunCoverageAnalysisCommand}" ToolTip="Run Coverage Analysis" Content="Run Analysis" Padding="8,4"/>
                <Button Command="{Binding ParseCoverageDataCommand}" ToolTip="Parse Coverage Data" Content="Parse Data" Padding="8,4"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Solution Explorer -->
                <ColumnDefinition Width="300"/>
                <!-- Splitter -->
                <ColumnDefinition Width="Auto"/>
                <!-- Main Working Area -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Solution Explorer Panel -->
            <Border Grid.Column="0" Background="#F7F7F7" BorderBrush="#E5E5E5" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Solution Explorer Header -->
                    <Border Grid.Row="0" Background="#E1E1E1" Padding="8,4">
                        <TextBlock Text="Solution Explorer" FontWeight="Bold" FontSize="12"/>
                    </Border>
                    
                    <!-- Solution Explorer Content -->
                    <TreeView Grid.Row="1" Name="SolutionExplorer" Background="White" BorderThickness="0" Margin="4">
                        <TreeViewItem Header="Coverage" IsExpanded="True">
                            <!-- CoverageParser Data -->
                            <TreeViewItem Header="CoverageParser" IsExpanded="True">
                                <TreeViewItem Header="Hierarchy Parser" IsExpanded="True">
                                    <TreeViewItem Header="top" IsExpanded="True">
                                        <TreeViewItem Header="cpu" IsExpanded="False">
                                            <TreeViewItem Header="core0"/>
                                            <TreeViewItem Header="core1"/>
                                            <TreeViewItem Header="cache"/>
                                        </TreeViewItem>
                                        <TreeViewItem Header="memory" IsExpanded="False">
                                            <TreeViewItem Header="ddr_ctrl"/>
                                            <TreeViewItem Header="sram"/>
                                        </TreeViewItem>
                                        <TreeViewItem Header="io" IsExpanded="False">
                                            <TreeViewItem Header="pcie"/>
                                            <TreeViewItem Header="usb"/>
                                        </TreeViewItem>
                                    </TreeViewItem>
                                </TreeViewItem>
                                <TreeViewItem Header="Module Information" IsExpanded="False">
                                    <TreeViewItem Header="cpu_core (Instance: cpu.core0)"/>
                                    <TreeViewItem Header="cpu_core (Instance: cpu.core1)"/>
                                    <TreeViewItem Header="cache_ctrl (Instance: cpu.cache)"/>
                                    <TreeViewItem Header="ddr_controller (Instance: memory.ddr_ctrl)"/>
                                    <TreeViewItem Header="sram_ctrl (Instance: memory.sram)"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Module List" IsExpanded="False">
                                    <TreeViewItem Header="cpu_core (Coverage: 85.2%)"/>
                                    <TreeViewItem Header="cache_ctrl (Coverage: 92.7%)"/>
                                    <TreeViewItem Header="ddr_controller (Coverage: 78.9%)"/>
                                    <TreeViewItem Header="sram_ctrl (Coverage: 95.1%)"/>
                                    <TreeViewItem Header="pcie_ctrl (Coverage: 67.3%)"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Test Execution" IsExpanded="False">
                                    <TreeViewItem Header="basic_functionality_test (PASSED)"/>
                                    <TreeViewItem Header="stress_test (PASSED)"/>
                                    <TreeViewItem Header="power_management_test (FAILED)"/>
                                    <TreeViewItem Header="corner_case_test (PASSED)"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Dashboard Data" IsExpanded="False">
                                    <TreeViewItem Header="Overall Coverage: 82.4%"/>
                                    <TreeViewItem Header="Line Coverage: 87.1%"/>
                                    <TreeViewItem Header="Branch Coverage: 75.8%"/>
                                    <TreeViewItem Header="Toggle Coverage: 84.3%"/>
                                </TreeViewItem>
                            </TreeViewItem>
                            
                            <!-- FunctionalParser Data -->
                            <TreeViewItem Header="FunctionalParser" IsExpanded="True">
                                <TreeViewItem Header="Coverage Groups" IsExpanded="True">
                                    <TreeViewItem Header="CPU_Operations" IsExpanded="False">
                                        <TreeViewItem Header="arithmetic_ops (Coverage: 95.2%)"/>
                                        <TreeViewItem Header="logic_ops (Coverage: 88.7%)"/>
                                        <TreeViewItem Header="branch_ops (Coverage: 76.4%)"/>
                                        <TreeViewItem Header="memory_ops (Coverage: 92.1%)"/>
                                    </TreeViewItem>
                                    <TreeViewItem Header="Memory_Access" IsExpanded="False">
                                        <TreeViewItem Header="read_operations (Coverage: 89.3%)"/>
                                        <TreeViewItem Header="write_operations (Coverage: 91.8%)"/>
                                        <TreeViewItem Header="cache_hits (Coverage: 94.5%)"/>
                                        <TreeViewItem Header="cache_misses (Coverage: 67.2%)"/>
                                    </TreeViewItem>
                                    <TreeViewItem Header="IO_Operations" IsExpanded="False">
                                        <TreeViewItem Header="pcie_transactions (Coverage: 78.9%)"/>
                                        <TreeViewItem Header="usb_transfers (Coverage: 85.6%)"/>
                                        <TreeViewItem Header="interrupt_handling (Coverage: 72.4%)"/>
                                    </TreeViewItem>
                                </TreeViewItem>
                                <TreeViewItem Header="Coverage Points" IsExpanded="False">
                                    <TreeViewItem Header="Total Points: 156"/>
                                    <TreeViewItem Header="Covered Points: 132"/>
                                    <TreeViewItem Header="Uncovered Points: 24"/>
                                    <TreeViewItem Header="Coverage Percentage: 84.6%"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Cross Coverage" IsExpanded="False">
                                    <TreeViewItem Header="CPU_Memory_Cross (Coverage: 76.8%)"/>
                                    <TreeViewItem Header="Memory_IO_Cross (Coverage: 69.2%)"/>
                                    <TreeViewItem Header="CPU_IO_Cross (Coverage: 82.1%)"/>
                                </TreeViewItem>
                            </TreeViewItem>
                            
                            <!-- ExclusionParser Data -->
                            <TreeViewItem Header="ExclusionParser" IsExpanded="False">
                                <TreeViewItem Header="Active Exclusions" IsExpanded="False">
                                    <TreeViewItem Header="Reset Logic Exclusions (12 rules)"/>
                                    <TreeViewItem Header="Clock Domain Crossings (8 rules)"/>
                                    <TreeViewItem Header="Debug Interface Exclusions (5 rules)"/>
                                    <TreeViewItem Header="Test Mode Exclusions (15 rules)"/>
                                </TreeViewItem>
                                <TreeViewItem Header="Exclusion Summary" IsExpanded="False">
                                    <TreeViewItem Header="Total Exclusions: 40"/>
                                    <TreeViewItem Header="Active Rules: 38"/>
                                    <TreeViewItem Header="Disabled Rules: 2"/>
                                    <TreeViewItem Header="Excluded Lines: 1,247"/>
                                </TreeViewItem>
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E5E5E5"/>

            <!-- Main Working Area -->
            <Grid Grid.Column="2" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Tab Control Header -->
                <Border Grid.Row="0" Background="#F6F6F6" BorderBrush="#E5E5E5" BorderThickness="0,0,0,1">
                    <TabControl Name="MainTabControl" TabStripPlacement="Top" BorderThickness="0">
                        <TabItem Header="Coverage Overview">
                            <Grid Background="White">
                                <TextBlock Text="Main working area - Coverage data will be displayed here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="16" 
                                          Foreground="Gray"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Module Analysis">
                            <Grid Background="White">
                                <TextBlock Text="Module analysis view will be implemented here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="16" 
                                          Foreground="Gray"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Test Results">
                            <Grid Background="White">
                                <TextBlock Text="Test results view will be implemented here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="16" 
                                          Foreground="Gray"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>
        </Grid>

        <!-- Output Window -->
        <Border Grid.Row="3" Background="#F7F7F7" BorderBrush="#E5E5E5" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Output Window Header -->
                <Border Grid.Row="0" Background="#E1E1E1" Padding="8,4">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Output" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                        <ComboBox Name="OutputSelector" Margin="10,0,0,0" SelectedIndex="0" Width="150">
                            <ComboBoxItem>General</ComboBoxItem>
                            <ComboBoxItem>Coverage Analysis</ComboBoxItem>
                            <ComboBoxItem>Parser Output</ComboBoxItem>
                            <ComboBoxItem>Build</ComboBoxItem>
                            <ComboBoxItem>Debug</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Border>
                
                <!-- Output Content -->
                <TextBox Grid.Row="1" 
                        Name="OutputTextBox" 
                        Background="White" 
                        IsReadOnly="True" 
                        VerticalScrollBarVisibility="Auto" 
                        HorizontalScrollBarVisibility="Auto"
                        FontFamily="Consolas"
                        FontSize="12"
                        Margin="4"
                        Text="Coverage Analyzer - Ready&#x0a;Waiting for coverage data to parse..."/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Background="#007ACC" Foreground="White">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Coverage Parser: " Margin="0,0,5,0"/>
                    <TextBlock Name="ParserStatus" Text="Not Loaded"/>
                    <TextBlock Text=" | " Margin="10,0"/>
                    <TextBlock Text="Files: " Margin="0,0,5,0"/>
                    <TextBlock Name="FileCount" Text="0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
