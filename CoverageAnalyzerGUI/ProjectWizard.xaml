<Window x:Class="CoverageAnalyzerGUI.ProjectWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="New Coverage Analysis Project" SizeToContent="WidthAndHeight" Width="800" MinWidth="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Light Theme Resources -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextForegroundBrush" Color="#000000"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
        
        <Style TargetType="TextBlock" x:Key="StepHeaderStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
        </Style>
        
        <Style TargetType="Button" x:Key="WizardButtonStyle">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style TargetType="ComboBox" x:Key="WizardComboStyle">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>
        
        <Style TargetType="TextBox" x:Key="WizardTextBoxStyle">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Row="0" Margin="20">
                <!-- Project Folder -->
                <TextBlock Text="Project Folder:" Style="{StaticResource LabelStyle}" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="ProjectFolderTextBox" Grid.Column="0" Padding="6,4" Height="28"
                            Background="{DynamicResource WindowBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}" IsReadOnly="True"/>
                    <Button Name="BrowseFolderButton" Grid.Column="1" Content="Browse..." 
                           Style="{StaticResource WizardButtonStyle}" Click="BrowseFolderButton_Click"/>
                </Grid>

                <Separator Margin="0,0,0,15"/>

                <!-- Coverage & Report Type -->
                <StackPanel Name="CoverageTypePanel" IsEnabled="True" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Coverage Type:" Style="{StaticResource LabelStyle}" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Vertical">
                                <RadioButton Name="FunctionalRadio" Content="Functional Coverage" 
                                            IsChecked="True" Margin="0,0,0,5" VerticalAlignment="Center"
                                            Checked="CoverageType_Changed"/>
                                <RadioButton Name="CodeRadio" Content="Code Coverage" 
                                            VerticalAlignment="Center" Checked="CoverageType_Changed"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Report Type:" Style="{StaticResource LabelStyle}" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Vertical">
                                <RadioButton Name="IndividualRadio" Content="Individual" 
                                            IsChecked="True" Margin="0,0,0,5" VerticalAlignment="Center"
                                            Checked="ReportType_Changed"/>
                                <RadioButton Name="AccumulateRadio" Content="Accumulate" 
                                            VerticalAlignment="Center" Checked="ReportType_Changed"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <Separator Margin="0,0,0,15"/>

                <!-- Database Selections -->
                <Grid Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Release, Report, and Changelist in one row -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Release -->
                        <StackPanel Grid.Column="0" Name="ReleaseSelectionPanel" Margin="0,0,10,0">
                            <TextBlock Text="Release:" Style="{StaticResource LabelStyle}" Margin="0,0,0,5"/>
                            <ComboBox Name="ReleaseComboBox" Style="{StaticResource WizardComboStyle}"
                                     SelectionChanged="ReleaseComboBox_SelectionChanged"/>
                        </StackPanel>
                        
                        <!-- Report -->
                        <StackPanel Grid.Column="1" Name="ReportSelectionPanel" Margin="5,0,5,0">
                            <TextBlock Text="Report:" Style="{StaticResource LabelStyle}" Margin="0,0,0,5"/>
                            <ComboBox Name="ReportComboBox" Style="{StaticResource WizardComboStyle}"
                                     SelectionChanged="ReportComboBox_SelectionChanged"/>
                        </StackPanel>
                        
                        <!-- Changelist -->
                        <StackPanel Grid.Column="2" Name="ChangelistSelectionPanel" Margin="10,0,0,0">
                            <TextBlock Text="Changelist:" Style="{StaticResource LabelStyle}" Margin="0,0,0,5"/>
                            <ComboBox Name="ChangelistComboBox" Style="{StaticResource WizardComboStyle}"
                                     SelectionChanged="ChangelistComboBox_SelectionChanged"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Project Data Path Display spanning full width -->
                    <StackPanel Grid.Row="1" Name="ProjectDataPathPanel" Margin="0,0,0,10">
                        <TextBlock Text="Project Data Path:" Style="{StaticResource LabelStyle}" Margin="0,0,0,5"/>
                        <TextBox Name="ProjectDataPathTextBox" Style="{StaticResource WizardTextBoxStyle}"
                                 IsReadOnly="True"
                                 Background="#F5F5F5"
                                 ToolTip="Project data path from database (GetReportPath)"/>
                    </StackPanel>
                </Grid>

            </StackPanel>

        <!-- Button Panel -->
        <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" 
                Background="{DynamicResource ControlBackgroundBrush}" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="CancelButton" Content="Cancel" Style="{StaticResource WizardButtonStyle}" 
                       Background="Gray" Click="CancelButton_Click"/>
                <Button Name="CreateProjectButton" Content="Create Project" Style="{StaticResource WizardButtonStyle}" 
                       IsEnabled="False" Click="CreateProjectButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>