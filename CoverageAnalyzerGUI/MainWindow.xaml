<Window x:Class="CoverageAnalyzerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoverageAnalyzerGUI"
        mc:Ignorable="d"
        Title="Coverage Analyzer - Visual Studio Style (.NET Assembly Integration)" Height="900" Width="1400">
    
    <Window.Resources>
        <!-- Light Theme Resources (Default) -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#F6F6F6"/>
        <SolidColorBrush x:Key="TextForegroundBrush" Color="#000000"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
    </Window.Resources>
    
    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <!-- Menu Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content Area -->
            <RowDefinition Height="*"/>
            <!-- Output Window -->
            <RowDefinition Height="200"/>
            <!-- Status Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{DynamicResource MenuBackgroundBrush}" 
              BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" 
              Foreground="{DynamicResource TextForegroundBrush}">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project..." Click="NewProject_Click"/>
                <MenuItem Header="_Open Project..." Click="OpenProject_Click"/>
                <Separator/>
                <MenuItem Header="_Load Coverage Data" Click="LoadCoverageData_Click"/>
                <Separator/>
                <MenuItem Header="_Save" Click="Save_Click"/>
                <MenuItem Header="Save _All" Click="SaveAll_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Click="Undo_Click"/>
                <MenuItem Header="_Redo" Click="Redo_Click"/>
                <Separator/>
                <MenuItem Header="Cu_t" Click="Cut_Click"/>
                <MenuItem Header="_Copy" Click="Copy_Click"/>
                <MenuItem Header="_Paste" Click="Paste_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Solution Explorer" Click="ToggleSolutionExplorer_Click"/>
                <MenuItem Header="_Output" Click="ToggleOutput_Click"/>
                <MenuItem Header="_Error List" Click="ToggleErrorList_Click"/>
                <Separator/>
                <MenuItem Header="_Theme">
                    <MenuItem Header="_Light Theme" Click="SetLightTheme_Click"/>
                    <MenuItem Header="_Dark Theme" Click="SetDarkTheme_Click"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Coverage Analysis" Click="RunCoverageAnalysis_Click"/>
                <MenuItem Header="_Options..." Click="Options_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar (NO Parse Coverage Data button) -->
        <ToolBarTray Grid.Row="1" Background="{DynamicResource ControlBackgroundBrush}">
            <ToolBar Background="{DynamicResource ControlBackgroundBrush}" 
                     Foreground="{DynamicResource TextForegroundBrush}">
                <Button Click="NewProject_Click" ToolTip="New Project" 
                        Content="New" Padding="8,4"/>
                <Button Click="OpenProject_Click" ToolTip="Open Project" 
                        Content="Open" Padding="8,4"/>
                <Button Click="Save_Click" ToolTip="Save" 
                        Content="Save" Padding="8,4"/>
                <Separator/>
                <Button Click="RunCoverageAnalysis_Click" ToolTip="Run Coverage Analysis" 
                        Content="Run Analysis" Padding="8,4"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Solution Explorer -->
                <ColumnDefinition Width="300"/>
                <!-- Splitter -->
                <ColumnDefinition Width="Auto"/>
                <!-- Main Working Area -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Solution Explorer Panel -->
            <Border Grid.Column="0" Background="{DynamicResource ControlBackgroundBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Solution Explorer Header -->
                    <Border Grid.Row="0" Background="{DynamicResource MenuBackgroundBrush}" Padding="8,4">
                        <TextBlock Text="Solution Explorer" FontWeight="Bold" FontSize="12" 
                                   Foreground="{DynamicResource TextForegroundBrush}"/>
                    </Border>
                    
                    <!-- Solution Explorer Content -->
                    <Grid Grid.Row="1">
                        <!-- TreeView -->
                        <TreeView Name="SolutionExplorer" 
                                  Background="{DynamicResource WindowBackgroundBrush}" 
                                  BorderThickness="0" Margin="4"
                                  Foreground="{DynamicResource TextForegroundBrush}">
                            <TreeViewItem Header="Coverage Data" IsExpanded="True">
                                <TreeViewItem Header="No data loaded - use File → Load Coverage Data" />
                            </TreeViewItem>
                        </TreeView>
                    </Grid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="{DynamicResource BorderBrush}"/>

            <!-- Main Working Area -->
            <Grid Grid.Column="2" Background="{DynamicResource WindowBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Tab Control -->
                <Border Grid.Row="0" Background="{DynamicResource ControlBackgroundBrush}" 
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                    <TabControl Name="MainTabControl" TabStripPlacement="Top" BorderThickness="0"
                               Background="{DynamicResource ControlBackgroundBrush}"
                               Foreground="{DynamicResource TextForegroundBrush}">
                        <TabItem Header="Coverage Overview">
                            <Grid Background="{DynamicResource WindowBackgroundBrush}">
                                <TextBlock Text="Main working area - Coverage data will be displayed here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="16" 
                                          Foreground="{DynamicResource TextForegroundBrush}"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Module Analysis">
                            <Grid Background="{DynamicResource WindowBackgroundBrush}">
                                <TextBlock Text="Module analysis view will be implemented here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="16" 
                                          Foreground="{DynamicResource TextForegroundBrush}"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Test Results">
                            <Grid Background="{DynamicResource WindowBackgroundBrush}">
                                <TextBlock Text="Test results view will be implemented here" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="16" 
                                          Foreground="{DynamicResource TextForegroundBrush}"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>
        </Grid>

        <!-- Output Window -->
        <Border Grid.Row="3" Background="{DynamicResource ControlBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Output Window Header -->
                <Border Grid.Row="0" Background="{DynamicResource MenuBackgroundBrush}" Padding="8,4">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Output" FontWeight="Bold" FontSize="12" VerticalAlignment="Center" 
                                   Foreground="{DynamicResource TextForegroundBrush}"/>
                        <ComboBox Name="OutputSelector" Margin="10,0,0,0" SelectedIndex="0" Width="150"
                                 Background="{DynamicResource ControlBackgroundBrush}"
                                 Foreground="{DynamicResource TextForegroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}">
                            <ComboBoxItem>General</ComboBoxItem>
                            <ComboBoxItem>Coverage Analysis</ComboBoxItem>
                            <ComboBoxItem>Parser Output</ComboBoxItem>
                            <ComboBoxItem>Build</ComboBoxItem>
                            <ComboBoxItem>Debug</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Border>
                
                <!-- Output Content -->
                <TextBox Grid.Row="1" Name="OutputTextBox" 
                        Background="{DynamicResource WindowBackgroundBrush}" 
                        IsReadOnly="True" 
                        VerticalScrollBarVisibility="Auto" 
                        HorizontalScrollBarVisibility="Auto"
                        FontFamily="Consolas"
                        FontSize="12"
                        Margin="4"
                        Text="Coverage Analyzer - Ready&#x0a;Click 'Load Coverage Data' to load coverage information..."
                        Foreground="{DynamicResource TextForegroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Background="{DynamicResource AccentBrush}" Foreground="White">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Name="ProjectInfoText" Text="No project loaded" FontWeight="Bold" Margin="0,0,10,0"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Coverage Parser: " Margin="0,0,5,0"/>
                    <TextBlock Name="ParserStatus" Text="Not Loaded"/>
                    <TextBlock Text=" | " Margin="10,0"/>
                    <TextBlock Text="Files: " Margin="0,0,5,0"/>
                    <TextBlock Name="FileCount" Text="0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
