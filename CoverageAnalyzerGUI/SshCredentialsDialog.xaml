<Window x:Class="CoverageAnalyzerGUI.SshCredentialsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SSH Authentication Required" 
        Height="280" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <!-- Shared styles -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DialogTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCEDB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="DialogPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCEDB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="DialogLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F6F6F6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" Padding="15,10">
            <StackPanel>
                <TextBlock Text="SSH Authentication Required" 
                          Foreground="White" FontSize="16" FontWeight="Bold"/>
                <TextBlock Name="HostLabel" Text="Connecting to: {hostname}" 
                          Foreground="White" FontSize="12" Opacity="0.9" Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Padding="20">
            <StackPanel>
                <TextBlock Text="SSH key authentication failed. Please enter your credentials:" 
                          Margin="0,0,0,15" TextWrapping="Wrap"/>
                
                <TextBlock Text="Username:" Style="{StaticResource DialogLabelStyle}"/>
                <TextBox Name="UsernameTextBox" Style="{StaticResource DialogTextBoxStyle}"/>
                
                <TextBlock Text="Password:" Style="{StaticResource DialogLabelStyle}"/>
                <PasswordBox Name="PasswordBox" Style="{StaticResource DialogPasswordBoxStyle}"/>
                
                <TextBlock Text="Note: Credentials will not be saved" 
                          Foreground="Gray" FontSize="10" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#E6E6E6" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="OkButton" Content="Connect" Style="{StaticResource DialogButtonStyle}"
                        Background="#007ACC" Click="OkButton_Click" IsDefault="True"/>
                <Button Name="CancelButton" Content="Cancel" Style="{StaticResource DialogButtonStyle}"
                        Click="CancelButton_Click" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>