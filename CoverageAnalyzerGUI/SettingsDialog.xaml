<Window x:Class="CoverageAnalyzerGUI.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings" 
        Height="300" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Light Theme Resources -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextForegroundBrush" Color="#000000"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
    </Window.Resources>
    
    <Grid Background="{DynamicResource WindowBackgroundBrush}" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Settings Content -->
        <GroupBox Grid.Row="0" Header="Jira Configuration" Margin="0,0,0,20" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" Grid.Column="0" 
                       Content="Jira Server:" 
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource TextForegroundBrush}"/>
                
                <TextBox Grid.Row="0" Grid.Column="1" 
                         Name="JiraServerTextBox"
                         Height="35"
                         VerticalAlignment="Center"
                         Padding="8,6"
                         FontSize="12"
                         VerticalContentAlignment="Center"
                         BorderBrush="{DynamicResource BorderBrush}"
                         Background="{DynamicResource ControlBackgroundBrush}"
                         Foreground="{DynamicResource TextForegroundBrush}"/>
                
                <TextBlock Grid.Row="1" Grid.Column="1" 
                           Text="Example: https://ontrack-internal.amd.com/" 
                           FontSize="11" 
                           FontStyle="Italic"
                           Foreground="Gray" 
                           Margin="0,5,0,10"/>
                
                <Label Grid.Row="3" Grid.Column="0" 
                       Content="Jira Project:" 
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource TextForegroundBrush}"/>
                
                <TextBox Grid.Row="3" Grid.Column="1" 
                         Name="JiraProjectTextBox"
                         Height="35"
                         VerticalAlignment="Center"
                         Padding="8,6"
                         FontSize="12"
                         VerticalContentAlignment="Center"
                         BorderBrush="{DynamicResource BorderBrush}"
                         Background="{DynamicResource ControlBackgroundBrush}"
                         Foreground="{DynamicResource TextForegroundBrush}"/>
                
                <TextBlock Grid.Row="4" Grid.Column="1" 
                           Text="Example: DCNDVDBG, RDNA, GPU_CORE" 
                           FontSize="11" 
                           FontStyle="Italic"
                           Foreground="Gray" 
                           Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,25,0,0">
            <Button Name="OkButton" 
                    Content="OK" 
                    Width="90" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    IsDefault="True"
                    FontSize="12"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    Width="90" 
                    Height="35"
                    Click="CancelButton_Click"
                    IsCancel="True"
                    FontSize="12"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    Foreground="{DynamicResource TextForegroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"/>
        </StackPanel>
    </Grid>
</Window>